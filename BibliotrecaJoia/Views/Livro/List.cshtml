@model IEnumerable<BibliotrecaJoia.Models.ViewModels.LivroViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>Cadastro de Livros</h1>

<p>
    <a asp-action="Create">Adicionar Livro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
             <!-- foi removido autor e editora dessa página-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td> 
            <!-- foi removido autor e editora dessa página-->
            <td>
                @Html.ActionLink("Atualizar", "Edit", new { id = item.Id /* id=item.PrimaryKey */ }) | <!-- id=item.PrimaryKey. Toda essa linha é baseada na IActionResult Edti lá no LivroController -->
                @Html.ActionLink("Detalhe", "Details", new { id = item.Id /* id=item.PrimaryKey */ }) | <!-- primeiro parâmetro é o que será escriro na tela e o segundo parâmetro é minha action-->
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
